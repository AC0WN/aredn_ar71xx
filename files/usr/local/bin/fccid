[ -f /etc/config/run-fccid ] || exit

# stagger the beacons between nodes
N=`ifconfig wlan0 | grep "inet addr" | cut -f4 -d. | cut -c1-3`
sleep $N

echo "ID: `uname -n`" | socat - udp4:10.255.255.255:4919,broadcast,so-bindtodevice=wlan0
